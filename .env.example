# TPT Open ERP - Environment Configuration
# Copy this file to .env and fill in your actual values

# Application
APP_NAME="TPT Free ERP"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000

# Database
DB_CONNECTION=pgsql
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=tpt_open_erp
DB_USERNAME=your_username
DB_PASSWORD=your_password

# Security
APP_KEY=base64:your_app_key
JWT_SECRET=your_jwt_secret
ENCRYPTION_KEY=your_encryption_key

# AI Services
OPENAI_API_KEY=your_openai_key
ANTHROPIC_API_KEY=your_anthropic_key
GEMINI_API_KEY=your_gemini_key

# File Storage
B2_ACCOUNT_ID=your_b2_id
B2_APPLICATION_KEY=your_b2_key
WASABI_ACCESS_KEY=your_wasabi_key
WASABI_SECRET_KEY=your_wasabi_secret

# Payment
PADDLE_VENDOR_ID=your_paddle_id
PADDLE_VENDOR_AUTH_CODE=your_paddle_code

# Email
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null

# Feature Flags
AI_FEATURES_ENABLED=true
AUTOMATION_ENABLED=true
ENCRYPT_SENSITIVE_DATA=true
GDPR_ENABLED=true
