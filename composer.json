{
    "name": "tpt/free-erp",
    "description": "Comprehensive ERP system with AI automation",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "TPT Development Team",
            "email": "dev@tpt-erp.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-pdo": "*",
        "ext-pgsql": "*",
        "ext-json": "*",
        "ext-curl": "*",
        "ext-openssl": "*",
        "ext-mbstring": "*",
        "ext-gd": "*",
        "ext-zip": "*",
        "firebase/php-jwt": "^6.0",
        "guzzlehttp/guzzle": "^7.0",
        "monolog/monolog": "^3.0",
        "phpmailer/phpmailer": "^6.0",
        "robmorgan/phinx": "^0.13",
        "symfony/cache": "^6.0",
        "symfony/http-foundation": "^6.0",
        "symfony/routing": "^6.0",
        "vlucas/phpdotenv": "^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "TPT\\ERP\\": "core/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TPT\\ERP\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "lint": "phpcs",
        "migrate": "phinx migrate",
        "seed": "phinx seed:run"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
